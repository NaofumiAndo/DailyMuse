rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Muses collection
    match /muses/{museId} {
      // Anyone can read muses (for public viewing)
      allow read: if true;

      // Only authenticated users (admins) can write, update, or delete
      allow write, update, delete: if request.auth != null;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
